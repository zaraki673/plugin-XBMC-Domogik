<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.domogik.controler"
       name="Domogik Controler"
       version="0.0.3"
       provider-name="Ppic">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Get info from Domogik.</summary>
    <summary lang="fr">Récupère les infos de Domogik</summary>
    <description lang="en">Control your Domogik server from your Tv.</description>
    <description lang="fr">Controler votre server Domogik depuis votre Tv.</description>
  </extension>
</addon>
